---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const books = await getCollection('books');
console.log('hello word');

---

<Layout title="Libros para programadores">
	<main>
		<h1 class="text-center text-7xl font-extrabold">Dev :)
			<span class="block">Books</span>
		</h1>
	</main>

	<section aria-label="Libros recomendados">
		<div class="px-4 mx-auto max-w-screen-xl">
			<div class="grid gap-6 md:grid-cols-2">
{
	books.map((book) => {
		const { title, author, img, description, link, readtime } = book.data
		const slug = book.slug
		return (
			<article class="flex">
				<a href={`/libro/${slug}`} class="mb-2 xl:mb-0 transition hover:scale-110" >
					<img src={img} alt={title} class="mr-5 w-48 rounded w-full rounded-lg" />
				</a>

				<div class="flex flex-col justify-center">
					<h2 class="mb-2 text-2xl font-bold leading-tight text-white">
						{title}
					</h2>
					<p class="mb-4 text-gray-50 max-w-sm">{description}</p>
					<span class="text-xs"> lectura en {readtime}</span>

				</div>
			</article>
		)
	})
}
			</div>

		</div>

	</section>
</Layout>
