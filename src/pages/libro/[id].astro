---
import { getCollection, render } from "astro:content";
import { SHOW_BUY_BUTTON } from "astro:env/server";
import Layout from "../../layouts/Layout.astro";
import BookScore from "../../components/BookScore.astro";
import BuyBotton from "../../components/BuyBotton.astro";

export async function getStaticPaths() {
  const books = await getCollection("books");
  return books.map((book) => ({
    params: { id: book.slug },
    props: { book: book },
  }));
}

const { book } = Astro.props;
const { data } = book;
const { slug } = book;
const { title, author, img, description, link, readtime, buy } = data;

const { Content } = await render(book);
export const prerender = true;
---

<Layout title="Detalles del libro">
  <div class="flex gap-12">
    <div class="flex flex-col items-center gap-4">
      <a href="/" class="hover:underline opacity-70">⬅️ Volver atras</a>
      <img
        src={`/${img}`}
        alt={title}
        class="rounded w-72 h-auto"
        transition:name={`img-${slug}`}
      />

      <BookScore server:defer id={slug}>
        <span slot="fallback" class="text-xs opacity-70" id="score">
          Puntuación: ...
        </span>
      </BookScore>

      {SHOW_BUY_BUTTON && <BuyBotton buy={buy} />}
      <!-- enalce para la compra -->
      <main class="max-w-3xl">
        <h1 class="text-4xl font-bold mb-4">{title}</h1>
        <div class="prose prose-invert">
          <Content />
        </div>
      </main>
    </div>
  </div>
</Layout>
